package utils;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;
import bean.Examfile;
public class ExamfileDAO {
	 public static List<Examfile> queryExamfile(Connection conn) throws SQLException {
	        String sql = "Select a.id ,a.idUser,a.idKyKhamBenh,a.day ,a.Descrip,a.Conclude,a.Status from hoso a ";
	 
	        PreparedStatement pstm = conn.prepareStatement(sql);
	        int id=0;
	        ResultSet rs = pstm.executeQuery();
	        List<Examfile> list = new ArrayList<Examfile>();
	        while (rs.next()) {
	        	id++;
	            int userId = rs.getInt("userId");
	            String name = rs.getString("Name");
	            String date = rs.getString("date");
	            int idKyKham = rs.getInt("idKyKhamBenh");
	            int status = rs.getInt("Status");
	            System.out.println(id+name+status);
	            Examfile exam = new Examfile();
	            exam.setId(id);
	            exam.setUserId(userId);
	            exam.setUserName(name);
	            exam.setDate(date);
                exam.setExamId(idKyKham);
	            exam.setStatus(status);
	            list.add(exam);
	        }
	        return list;
	    }
